<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cerberus_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:src="@drawable/cerberus_logo_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profile_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charlie Castro Soto"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/profile_pic"
        app:layout_constraintStart_toStartOf="@id/profile_pic"
        app:layout_constraintTop_toBottomOf="@id/profile_pic" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/employees_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/people2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_name" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/locations_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="150dp"
        android:src="@drawable/arena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_name" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/events_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/calendar"
        app:layout_constraintStart_toEndOf="@id/employees_btn"
        app:layout_constraintEnd_toStartOf="@id/locations_btn"
        app:layout_constraintTop_toTopOf="@id/employees_btn"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/notifications_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/inbox"
        app:layout_constraintStart_toEndOf="@id/employees_btn"
        app:layout_constraintEnd_toStartOf="@id/locations_btn"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@id/events_btn"/>


</androidx.constraintlayout.widget.ConstraintLayout>